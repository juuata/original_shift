<%= form_with(model: @post, local: true) do |form| %>

  <div class="desired-time">
    <%= form.label :time %>
    <%= form.text_field :time %>
  </div>

  <div class="start-time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>